<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/eventImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@color/color_CECECE"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/startDayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12일 후 시작"
                android:textSize="12dp"
                android:textColor="@color/color_white"
                android:drawableStart="@drawable/carbon_time"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_event_time"
                app:layout_constraintHorizontal_bias=".1"
                app:layout_constraintVertical_bias=".9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/endDayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_5B5B5B"
                android:text="종료된 이벤트"
                android:textColor="@color/color_white"
                android:textSize="10dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>