<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_paper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:background="@color/color_F0F0F0"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemScaleBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:scaleType="center"
        android:src="@drawable/icon_scale_extend"
        app:layout_constraintBottom_toBottomOf="@id/item_paper"
        app:layout_constraintEnd_toEndOf="@id/item_paper"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/item_paper"
        app:layout_constraintTop_toTopOf="@id/item_paper"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>