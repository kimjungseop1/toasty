<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/color_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="21dp"
        android:paddingEnd="15dp"
        android:scaleType="center"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/action_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/action_etc_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:textColor="@color/color_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/action_etc_1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/action_etc_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:textColor="@color/color_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/action_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="42dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_more"
        android:layout_width="22dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_action_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>