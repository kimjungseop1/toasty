<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/color_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="21dp"
        android:paddingEnd="15dp"
        android:scaleType="center"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/action_search"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_edit_search"
        android:hint="검색어를 입력해주세요"
        android:paddingStart="50dp"
        android:textColor="@color/color_black"
        android:textColorHint="@color/color_424242"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/action_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_search"
        app:layout_constraintBottom_toBottomOf="@id/action_search"
        app:layout_constraintStart_toStartOf="@id/action_search"
        app:layout_constraintTop_toTopOf="@id/action_search" />

</androidx.constraintlayout.widget.ConstraintLayout>